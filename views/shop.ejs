<%- include('./partials/header') %>
  
  <!-- Success Message -->
  <script>
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('orderSuccess') === 'true') {
      setTimeout(() => {
        alert('Order placed successfully! Thank you for your purchase.');
        // Remove the parameter from URL
        window.history.replaceState({}, document.title, window.location.pathname);
      }, 500);
    }
  </script>
  
  <div class="w-full min-h-screen flex flex-col sm:flex-row px-4 sm:px-6 lg:px-16 py-12 bg-gray-50">
    <!-- Sidebar -->
    <aside class="w-full sm:w-80 flex-shrink-0 pr-0 sm:pr-8 mb-8 sm:mb-0">
      <div class="card p-6 mb-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
          <i class="ri-sort-desc mr-2 text-indigo-600"></i>
          Sort by
        </h3>
        <form action="/shop" method="GET" id="sortForm">
          <select
            class="w-full border border-gray-200 rounded-lg px-4 py-2.5 bg-white text-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"
            name="sortby" onchange="document.getElementById('sortForm').submit()">
            <option value="popular" <%= currentSort === 'popular' ? 'selected' : '' %>>Popular</option>
            <option value="newest" <%= currentSort === 'newest' ? 'selected' : '' %>>Newest</option>
            <option value="price-asc" <%= currentSort === 'price-asc' ? 'selected' : '' %>>Price: Low to High</option>
            <option value="price-desc" <%= currentSort === 'price-desc' ? 'selected' : '' %>>Price: High to Low</option>
          </select>
          <% if (showDiscounted) { %>
            <input type="hidden" name="discount" value="true">
          <% } %>
        </form>
      </div>

      <div class="card p-6 mb-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
          <i class="ri-compass-3-line mr-2 text-indigo-600"></i>
          Browse
        </h3>
        <ul class="space-y-3 text-gray-600">
          <li>
            <a href="/shop?sortby=newest" class="hover:text-indigo-600 font-medium <%= currentSort === 'newest' ? 'text-indigo-600' : '' %>">New Collection</a>
          </li>
          <li>
            <a href="/shop" class="hover:text-indigo-600 font-medium <%= !showDiscounted && currentSort === 'popular' ? 'text-indigo-600' : '' %>">All Products</a>
          </li>
          <li>
            <a href="/shop?discount=true" class="hover:text-indigo-600 font-medium <%= showDiscounted ? 'text-indigo-600' : '' %>">Discounted Products</a>
          </li>
        </ul>
      </div>

      <div class="card p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
          <i class="ri-filter-3-line mr-2 text-indigo-600"></i>
          Filters
        </h3>
        <ul class="space-y-3 text-gray-600">
          <li>
            <a href="/shop" class="hover:text-indigo-600 font-medium <%= !showDiscounted ? 'text-indigo-600' : '' %>">All Items</a>
          </li>
          <li>
            <a href="/shop?discount=true" class="hover:text-indigo-600 font-medium <%= showDiscounted ? 'text-indigo-600' : '' %>">On Sale</a>
          </li>
        </ul>
      </div>
    </aside>

    <!-- Product Grid -->
    <section class="flex-1 min-w-0 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      <% products.forEach(function(product) { %>
        <div class="product-card h-[440px] flex flex-col group">
          <!-- Product Image -->
          <a href="/shop/<%= product._id %>" class="block">
            <div class="product-image w-full h-48 bg-gray-100 flex items-center justify-center overflow-hidden p-3 relative">
              <img class="h-full w-full object-contain rounded-lg"
                src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>" />
              <% if(product.discount > 0) { %>
                <div class="discount-badge">
                  <%= product.discount %>% OFF
                </div>
              <% } %>
            </div>
          </a>

          <!-- Product Details -->
          <div class="flex-1 flex flex-col gap-3 p-6">
            <% if(product.brand) { %>
              <p class="text-sm text-gray-500 font-medium uppercase tracking-wide">
                <%= product.brand %>
              </p>
            <% } %>
            <a href="/shop/<%= product._id %>" class="block">
              <h3 class="text-base font-bold text-gray-900 line-clamp-2 group-hover:text-indigo-600 transition-colors">
                <%= product.name %>
              </h3>
            </a>

            <% if(product.color) { %>
              <p class="text-sm text-gray-500 flex items-center">
                <span class="w-3 h-3 rounded-full bg-gray-400 mr-2"></span>
                <%= product.color %>
              </p>
            <% } %>

            <div class="flex items-center gap-2 mt-2">
              <p class="text-xl font-black text-indigo-600">
                ₹ <%= product.price - (product.price * product.discount / 100) %>
              </p>
              <% if(product.discount > 0) { %>
                <p class="text-sm text-gray-500 line-through">
                  ₹ <%= product.price %>
                </p>
              <% } %>
            </div>

            <div class="mt-auto flex gap-3 pt-4">
              <a href="/shop/<%= product._id %>" class="flex-1">
                <button class="btn btn-primary w-full text-sm py-2.5">
                  <i class="ri-eye-line mr-1"></i>
                  View Details
                </button>
              </a>
              <button onclick="addProduct('<%= product._id %>')" 
                      class="btn btn-secondary px-3 py-2.5">
                <i class="ri-shopping-cart-line"></i>
              </button>
            </div>
          </div>
        </div>
        <% }) %>
    </section>
  </div>

  <script>
    function addProduct(productID){
      fetch(`/users/cart/add/${productID}`, {
        method: 'POST',
      })
      .then(response => response.json())
      .then(data => {
        if(data.success) {
          alert('Product added to cart!');
        } else {
          alert('Failed to add product to cart');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error adding product to cart');
      });
    }
  </script>

  <%- include('./partials/footer') %>