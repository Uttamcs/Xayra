<%- include('./partials/header') %>

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-indigo-100">
  <!-- Flash Messages -->
  <% if (typeof success !== 'undefined' && success && success.length > 0) { %>
    <div class="flash-msg bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg mx-auto mt-4 max-w-md text-center">
      <%= success[0] %>
    </div>
  <% } %>

  <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
    <div class="flash-msg bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg mx-auto mt-4 max-w-md text-center">
      <%= error[0] %>
    </div>
  <% } %>

  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Order Management</h1>
          <p class="text-gray-600">Manage and track all customer orders</p>
        </div>
        <div class="flex space-x-3">
          <a href="/owners/admin" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition">
            <i class="ri-dashboard-line mr-2"></i>Dashboard
          </a>
          <a href="/products" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
            <i class="ri-shopping-bag-line mr-2"></i>Products
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-6 py-8">
    <!-- Orders Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <div>
            <h2 class="text-lg font-semibold text-gray-900">All Orders</h2>
            <p class="text-gray-600 text-sm mt-1">View and manage customer orders</p>
          </div>
          <div class="flex items-center gap-3">
            <select onchange="sortOrders(this.value)" class="border border-gray-300 rounded-lg px-3 py-2 text-sm">
              <option value="newest">Newest First</option>
              <option value="oldest">Oldest First</option>
              <option value="status">By Status</option>
              <option value="customer">By Customer</option>
            </select>
          </div>
        </div>
      </div>

      <% if (orders && orders.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Order Details</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Customer & Delivery</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Date & Payment</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Status</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% orders.forEach(order => { %>
              <tr class="hover:bg-gray-50 transition">
                <td class="px-6 py-4">
                  <div class="flex items-center">
                    <div class="p-2 bg-blue-100 rounded-lg mr-3">
                      <i class="ri-file-list-line text-blue-600"></i>
                    </div>
                    <div>
                      <div class="text-sm font-medium text-gray-900">#<%= order._id.toString().slice(-6) %></div>
                      <div class="text-xs text-gray-500"><%= order.items ? order.items.length : 0 %> item(s)</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900 font-medium"><%= order.customerName %></div>
                  <div class="text-xs text-gray-500"><%= order.customerEmail %></div>
                  <% if (order.phone) { %>
                    <div class="text-xs text-gray-500"><i class="ri-phone-line mr-1"></i><%= order.phone %></div>
                  <% } %>
                  <% if (order.deliveryTime) { %>
                    <div class="text-xs text-blue-600 mt-1">
                      <i class="ri-time-line mr-1"></i>
                      <% 
                        const timeMap = {
                          'morning': 'Morning (9-12 PM)',
                          'afternoon': 'Afternoon (12-4 PM)', 
                          'evening': 'Evening (4-9 PM)',
                          'anytime': 'Anytime (9 AM-9 PM)'
                        };
                      %>
                      <%= timeMap[order.deliveryTime] || order.deliveryTime %>
                    </div>
                  <% } %>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900"><%= new Date(order.date).toLocaleDateString() %></div>
                  <div class="text-xs text-gray-500"><%= new Date(order.date).toLocaleTimeString() %></div>
                  <div class="text-xs text-gray-500 capitalize mt-1">
                    <i class="ri-bank-card-line mr-1"></i><%= order.paymentMethod %>
                  </div>
                  <% if (order.paymentId) { %>
                    <div class="text-xs text-green-600">ID: <%= order.paymentId.slice(-8) %></div>
                  <% } %>
                </td>
                <td class="px-6 py-4">
                  <span class="inline-flex px-3 py-1 text-xs font-medium rounded-full <%= 
                    order.status === 'Pending' ? 'bg-yellow-100 text-yellow-800' : 
                    order.status === 'Paid' ? 'bg-green-100 text-green-800' : 
                    order.status === 'Shipped' ? 'bg-blue-100 text-blue-800' : 
                    order.status === 'Delivered' ? 'bg-emerald-100 text-emerald-800' :
                    order.status === 'Cancelled' ? 'bg-red-100 text-red-800' :
                    'bg-gray-100 text-gray-800' %>">
                    <%= order.status %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <form action="/owners/orders/update/<%= order.customerId %>/<%= order._id %>" method="POST" class="inline">
                    <select name="status" onchange="this.form.submit()" class="text-sm border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                      <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                      <option value="Paid" <%= order.status === 'Paid' ? 'selected' : '' %>>Paid</option>
                      <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                      <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                      <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                    </select>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-12">
          <i class="ri-file-list-line text-6xl text-gray-300 mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No orders found</h3>
          <p class="text-gray-500">Orders will appear here once customers start placing them.</p>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Flash Auto Dismiss Script -->
<script>
  setTimeout(() => {
    document.querySelectorAll('.flash-msg').forEach(el => {
      el.style.opacity = '0';
      setTimeout(() => el.style.display = 'none', 300);
    });
  }, 4000);

  function sortOrders(sortBy) {
    const tbody = document.querySelector('tbody');
    const rows = Array.from(tbody.querySelectorAll('tr'));
    
    rows.sort((a, b) => {
      switch(sortBy) {
        case 'newest':
          const dateA = new Date(a.cells[2].textContent.split('\n')[0]);
          const dateB = new Date(b.cells[2].textContent.split('\n')[0]);
          return dateB - dateA;
        case 'oldest':
          const dateA2 = new Date(a.cells[2].textContent.split('\n')[0]);
          const dateB2 = new Date(b.cells[2].textContent.split('\n')[0]);
          return dateA2 - dateB2;
        case 'status':
          const statusA = a.cells[3].textContent.trim();
          const statusB = b.cells[3].textContent.trim();
          return statusA.localeCompare(statusB);
        case 'customer':
          const customerA = a.cells[1].textContent.trim();
          const customerB = b.cells[1].textContent.trim();
          return customerA.localeCompare(customerB);
        default:
          return 0;
      }
    });
    
    // Clear tbody and append sorted rows
    tbody.innerHTML = '';
    rows.forEach(row => tbody.appendChild(row));
  }
</script>

<%- include('./partials/footer') %>