<%- include('./partials/header') %>

<div class="min-h-screen flex flex-col bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100">

  <!-- Flash Messages -->
  <% if (success && success.length > 0) { %>
    <div class="flash-msg bg-green-600 text-white text-sm font-medium px-4 py-2 rounded-lg shadow-lg mx-auto mt-4 w-1/2 text-center">
      <%= success[0] %>
    </div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="flash-msg bg-red-600 text-white text-sm font-medium px-4 py-2 rounded-lg shadow-lg mx-auto mt-4 w-1/2 text-center">
      <%= error[0] %>
    </div>
  <% } %>

  <div class="container mx-auto px-6 py-10 flex flex-grow">
    
    <!-- Sidebar -->
    <aside class="w-[22%] pr-6 border-r border-gray-200 hidden md:flex flex-col space-y-4">
      <h3 class="text-lg font-semibold text-gray-700 mb-2">Admin Menu</h3>
      <a class="text-blue-600 hover:text-blue-800 font-medium" href="/products">ðŸ“¦ All Products</a>
      <a class="text-blue-600 hover:text-blue-800 font-medium" href="/products/create">âž• Create Product</a>
      <a class="text-blue-600 hover:text-blue-800 font-medium" href="/owners/orders">ðŸ“‹ All Orders</a>
      <a class="text-red-600 hover:text-red-800 font-medium" href="/owners/logout">ðŸšª Logout</a>
    </aside>

    <!-- Main Content -->
    <main class="w-full md:w-3/4 bg-white p-10 shadow-lg rounded-2xl ml-0 md:ml-6">
      <h2 class="text-3xl font-bold text-gray-800 mb-6 border-b pb-2">âœ¨ Create New Product</h2>

      <form autocomplete="off" action="/products/create" method="POST" enctype="multipart/form-data" class="space-y-8">
        
        <!-- Product Image -->
        <div>
          <label class="block mb-2 text-sm font-semibold text-gray-700">Upload Product Image</label>
          <input name="image" type="file" required class="border border-gray-300 rounded-lg px-4 py-2 w-full focus:ring-2 focus:ring-blue-500" />
        </div>

        <!-- Product Details -->
        <div>
          <h3 class="text-lg font-semibold mb-3 text-gray-800">Product Details</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <input name="brand" type="text" placeholder="Brand Name" required class="border p-3 rounded-lg w-full focus:ring-2 focus:ring-blue-500" />
            <input name="name" type="text" placeholder="Product Name" required class="border p-3 rounded-lg w-full focus:ring-2 focus:ring-blue-500" />
            <input name="color" type="text" placeholder="Color" required class="border p-3 rounded-lg w-full focus:ring-2 focus:ring-blue-500" />
            <input name="price" type="number" placeholder="Price â‚¹" required class="border p-3 rounded-lg w-full focus:ring-2 focus:ring-blue-500" />
            <input name="discount" type="number" placeholder="Discount (%)" required class="border p-3 rounded-lg w-full focus:ring-2 focus:ring-blue-500" />
          </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="px-6 py-3 rounded-xl bg-blue-600 hover:bg-blue-700 text-white font-semibold shadow-md transition">
            ðŸš€ Create Product
          </button>
        </div>
      </form>

      <!-- Recent Orders Section -->
      <% if (typeof recentOrders !== 'undefined' && recentOrders.length > 0) { %>
      <div class="mt-12 border-t pt-8">
        <h3 class="text-2xl font-bold text-gray-800 mb-6">ðŸ“‹ Recent Orders</h3>
        <div class="overflow-x-auto">
          <table class="w-full bg-white border border-gray-200 rounded-lg">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Order ID</th>
                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Customer</th>
                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Date</th>
                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Status</th>
                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Payment</th>
              </tr>
            </thead>
            <tbody>
              <% recentOrders.forEach(order => { %>
              <tr class="border-t">
                <td class="px-4 py-3 text-sm text-gray-900">#<%= order._id.toString().slice(-6) %></td>
                <td class="px-4 py-3 text-sm text-gray-900"><%= order.customerName %></td>
                <td class="px-4 py-3 text-sm text-gray-600"><%= new Date(order.date).toLocaleDateString() %></td>
                <td class="px-4 py-3">
                  <span class="px-2 py-1 text-xs rounded-full <%= order.status === 'Pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                    <%= order.status %>
                  </span>
                </td>
                <td class="px-4 py-3 text-sm text-gray-600"><%= order.paymentMethod %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <% } %>
    </main>
  </div>
</div>

<!-- Flash Auto Dismiss Script -->
<script>
  setTimeout(() => {
    document.querySelectorAll('.flash-msg').forEach(el => {
      el.style.display = 'none';
    });
  }, 3000);
</script>

<%- include('./partials/footer') %>
